# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Application
NODE_ENV=production
PORT=3000
INSTANCE_ID=api-1

# Database
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DATABASE=tripo
MONGO_APP_PASSWORD=your_secure_app_password
MONGODB_URI=mongodb://admin:your_secure_mongo_password@mongodb:27017/tripo?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Payment Gateways
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxx

# Communication Services
TWILIO_ACCOUNT_SID=ACxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=SG.xxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Google Services
GOOGLE_MAPS_API_KEY=AIzaSyxxxxxxxxxx

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# SSL (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Session
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Health Check
HEALTH_CHECK_TIMEOUT=5000